doctype html
html
  head
    block head
      title= title
      link(rel='stylesheet' href='/stylesheets/reset.css')
      link(rel='stylesheet' href='/stylesheets/layout.css')
      link(rel="shortcut icon" type="image/x-icon" href='/stylesheets/favicon.ico')


  body

    nav
      div.empty
        if locals.authenticated
          img(src="https://beautyhubaustralia.com.au/lash-brow/wp-content/uploads/sites/2/2021/03/Female-avatar-1.png").profilePic
          a(href="https://github.com/Joan-Buck/MovieApp" target="_blank")
            p.demoUser #{locals.user.username}
      a.logo(href='/') cinemaddict
      div.topRight
        if locals.authenticated
          a.myLists(href='/my-lists') MY LISTS
          a.signOut(href='/users/signout') SIGN OUT
        else
          a.signIn(href='/users/signin') SIGN IN
          a.signUp(href='/users/signup') SIGN UP

    block content

  footer
    //- div.footer
    a.details(href="https://github.com/Joan-Buck/MovieApp") Details
    a.movies(href="/") Movies
